<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ViewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/fragment_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:layout_height="300dp"
                tools:scaleType="center"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/fragment_view_text_title"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/textAlt"
                android:visibility="gone"
                tools:text="This is the title"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/fragment_view_text_author"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/mainText"
                android:visibility="gone"
                tools:text="Author name"
                tools:visibility="visible" />
        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/fragment_view_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/darkModeIcon"
        android:indeterminateTintMode="src_atop" />

</FrameLayout>